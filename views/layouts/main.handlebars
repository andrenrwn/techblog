  <title>The Tech Blog</title>
  <!--<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">-->
  <link href='/css/daisyui.full.min.css' rel='stylesheet' type='text/css' />
