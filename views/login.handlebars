<div class="row gap-2 flex flex-wrap">
  <div class="border bg-gray-100 border-base-300 rounded-3xl p-0 w-[100%] lg:w-[calc(50%-1rem)] lg:mr-2">
    <h2 class="m-0 p-2 w-full bg-gray-300 rounded-t-2xl">Login</h2>

    <form class="px-3 form login-form w-[100%] border-base-300 gap-2">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input block w-[100%]" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input block w-[100%]" type="password" id="password-login" />
      </div>
      <div class="form-group flex justify-end">
        <button class="btn btn-primary bg-black text-neutral-content" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 border bg-gray-100 border-base-300 rounded-2xl p-0 w-[100%] lg:w-[calc(50%-1rem)] lg:mr-2">
