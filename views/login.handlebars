    <form class="px-3 form signup-form w-[100%] border-base-300 gap-2">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input block w-[100%]" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input block w-[100%]" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input block w-[100%]" type="password" id="password-signup" />
      </div>
      <div class="form-group flex justify-end">
        <button class="btn btn-primary bg-black text-neutral-content" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

